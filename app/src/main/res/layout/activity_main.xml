<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/avatar" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rate"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/rate" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="4.7"
        android:textColor="@color/contents"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rate"
        app:layout_constraintStart_toStartOf="@+id/rate"
        app:layout_constraintTop_toTopOf="@+id/rate" />

    <ImageView
        android:id="@+id/pazl"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/pazl" />

    <ImageView
        android:id="@+id/compability_percent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/rectangle_compability" />

    <TextView
        android:id="@+id/tv_compability_perent"
        android:layout_width="27.78dp"
        android:layout_height="13.33dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="83%"
        android:textColor="@color/contents"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/compability_percent"
        app:layout_constraintTop_toTopOf="@+id/compability_percent" />

    <ImageView
        android:id="@+id/compability"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/rectangle_compability" />

    <TextView
        android:id="@+id/tv_compability"
        android:layout_width="27.78dp"
        android:layout_height="13.33dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="1D"
        android:textColor="@color/contents"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/compability"
        app:layout_constraintTop_toTopOf="@+id/compability" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="Alice Peterson"
        android:textColor="@color/contents"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <TextView
        android:id="@+id/tv_languages"
        android:layout_width="230dp"
        android:layout_height="18dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal|start"
        android:text="Russian, English, German"
        android:textColor="@color/contents"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <ImageView
        android:id="@+id/ic_world"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:srcCompat="@drawable/ic_world" />

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginStart="294dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="Choose"
        android:textColor="#9575CD"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <ImageView
        android:id="@+id/ic_place"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_world"
        app:srcCompat="@drawable/place" />

    <TextView
        android:id="@+id/tv_choose_second"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginStart="294dp"
        android:layout_marginTop="54dp"
        android:gravity="center_horizontal"
        android:text="Choose"
        android:textColor="#9575CD"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="230dp"
        android:layout_height="18dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal|start"
        android:text="New York city, USA"
        android:textColor="@color/contents"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_languages" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_four_top"
        tools:listitem="@layout/item_image"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="372dp"
        app:layout_constraintDimensionRatio="3:1"
        tools:itemCount="4"
        android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>