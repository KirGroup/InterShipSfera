<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/contents</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="RcText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/outline</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>


    <style name="Choose">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/outline</item>
    </style>

    <style name="SmallText3">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/contents</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="InputLayout">
        <item name="boxStrokeColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">300</item>
        <item name="counterTextColor">@color/light_grey</item>
        <item name="hintTextColor">@color/light_grey</item>

    </style>

    <style name="EditText">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>